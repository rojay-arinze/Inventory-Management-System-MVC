@model Category //Tell the view what model it should expect to recieve


@{
    string action = ViewBag.Action ?? string.Empty;
}

<form method="post" asp-controller="categories" asp-action="@action">
    @if(action?.ToLower() == "edit")
    {
        <input type="hidden" asp-for="CategoryId" /> @* We only want to render this element if the action method is edit *@
    }
    <div class="text-danger" asp-validation-summary="All"></div>  @* Display all validation error messages *@
    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="Name"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="Name" class="form-control" />
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="Description"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="Description" class="form-control" />
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2">
            <input type="submit" class="btn btn-primary" value="Save" />
        </div>
        <div class="col-6">
        </div>
    </div>


</form>