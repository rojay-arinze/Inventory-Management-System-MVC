
@model Category //Tell the view what model it should expect to recieve


@section title{

    @if(Model != null)
    {
        
    <h3>Category: @Model.Name</h3> @* pull data from the view you sent over. @Model creates an instance of the data you just sent over. *@
    }
}

<form method="post" asp-controller="categories" asp-action="edit">
    <input type="hidden" asp-for="CategoryId"/>
    <div class="text-danger" asp-validation-summary="All"></div>  @* Display all validation error messages *@
    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="Name"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="Name" class="form-control"/>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="Description"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="Description" class="form-control" />
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2">
            <input type="submit" class="btn btn-primary" value="save"/>
        </div>
        <div class="col-6">
        </div>
    </div>


</form>