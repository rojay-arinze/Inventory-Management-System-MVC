@model List<Product>
@section title {
    <h1>Products</h1>

}

@if (Model != null && Model.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Name</th>
                <th>Quantity</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Category?.Name</td>
                    <td>@product.Name</td>
                    <td>@product.Quantity</td>
                    <td>@product.Price</td>
                    <td><a class="btn btn-link" asp-controller="products" asp-action="edit" asp-route-id="@product.ProductId">Edit</a></td> @* use tag helpers to generate a url *@
                    <td><a class="btn btn-link" asp-controller="products" asp-action="delete" asp-route-id="@product.ProductId" onclick="return confirmDelete()">Delete</a></td> @* use tag helpers to generate a url *@
                    <td></td>
                    <td></td>
                </tr>
            }
        </tbody>
    </table>
    <br />
    <div class="row">
        <div class="col-2">
            <a class="btn btn-primary" asp-controller="products" asp-action="add">Add</a>
        </div>
    </div>
}

@section Scripts {
    <script>
        function confirmDelete() {
            return confirm("Are you sure you want to delete this Product?");
        }
    </script>
}

